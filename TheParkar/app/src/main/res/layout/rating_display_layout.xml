<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:background="@drawable/layout_draw_new"
    android:layout_height="wrap_content">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="center"
                android:background="@drawable/background"></LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="The Name of the reviewer"
                android:textSize="15dp"
                android:id="@+id/rating_name"
                android:textColor="#000"
                android:gravity="right"
                android:layout_margin="20dp"></TextView>


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/rating_rating_bar"
                android:layout_marginTop="50dp"
                android:progressTint="#FFEA00"
                android:isIndicator="true"
                android:clickable="false"
                android:layout_marginRight="20dp"></RatingBar>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rating_image"
                android:layout_width="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:src="@drawable/profile"
                app:civ_border_color="#02914B"
                app:civ_border_width="3dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3.2"
                android:textSize="30dp"
                android:layout_gravity="right|bottom"
                android:drawableRight="@drawable/ic_star_black_24dp"
                android:textColor="#000"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"
                android:id="@+id/rating_numerics"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="The description of the review"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/rating_description"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="The date of review"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/rating_date"
        ></TextView>

</LinearLayout>