<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Deatils_Tab">



    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/parking"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Parkar"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30dp"></TextView>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="470dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/laybout_draw">
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textColorHint="#000"
            android:hint="Name"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:layout_gravity="center"
            android:id="@+id/register_name" />
        <EditText
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:id="@+id/register_number"
            android:textColorHint="#000"
            android:maxLength="10"
            android:hint="Phone Number"
            android:inputType="number"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:id="@+id/register_address"
            android:textColorHint="#000"
            android:hint="Home Address"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:id="@+id/register_car_model"
            android:textColorHint="#000"
            android:hint="Car You Drive"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_directions_car_black_24dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:id="@+id/register_car_number"
            android:textColorHint="#000"
            android:hint="Registered Car Number"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_more_black_24dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"/>


        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_submit_detail"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Submit"
            android:background="#00E676"/>

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:id="@+id/save_data__progress"
            style="@style/Widget.AppCompat.ProgressBar"
            ></ProgressBar>
    </LinearLayout>

</LinearLayout>