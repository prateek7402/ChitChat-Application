<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Deatils_Tab">



    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/parking"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Parkar"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30dp"></TextView>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/laybout_draw">
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textColorHint="#000"
            android:hint=" Email address"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_gravity="center"
            android:id="@+id/email_login" />
        <EditText
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:id="@+id/pass_login"
            android:textColorHint="#000"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_login"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Login"
            android:background="#00E676"/>

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:id="@+id/login_progress"
            style="@style/Widget.AppCompat.ProgressBar"
            ></ProgressBar>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Your Password?"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:onClick="Forget"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member! Get registered"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:onClick="Register"></TextView>
</LinearLayout>