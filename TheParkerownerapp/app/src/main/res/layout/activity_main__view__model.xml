<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/background">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Total Space:200"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_gravity="right|center"
                android:layout_marginTop="20dp"
                android:id="@+id/total_space"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                tools:text="Total Free Space:50"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_gravity="right|center"
                android:layout_marginTop="20dp"
                android:id="@+id/total_free_space"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/parking_layout_image"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="left"
            tools:src="@drawable/profile"
            app:civ_border_color="#02914B"
            app:civ_border_width="3dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Lovely Professional University, Main Parking"
            android:textSize="15dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/layout_parking_name"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/container_layout_recyclerView"/>

</LinearLayout>