<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/ll1"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2788133A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/notebook" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="JAANKAAR"
                android:textColor="#000"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_note_black_24dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textColorHint="#000"
        android:hint=" Title"
        android:drawableLeft="@drawable/ic_person_black_24dp1"
        android:layout_gravity="center"
        android:id="@+id/ntitle" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColorHint="#000"
        android:hint=" Message"
        android:drawableLeft="@drawable/ic_message_black_24dp"
        android:layout_gravity="center"
        android:id="@+id/nnote" />



    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/n_save"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Save note"
        android:background="#70D7E4"/>


</LinearLayout>